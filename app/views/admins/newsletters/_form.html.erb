<%= render 'shared/error_messages', obj: @newsletter if @newsletter.errors.any? %>

<%= form_with model: [:admins, @newsletter], local: true  do |f| %>

  <div id="new-attachment"></div>

  <div class="form-group mt-3">
    <%= f.label :name, class:'ml-5 font-weight-bold' %>
    <%= f.text_field :name, class: 'col-md-8 form-control ml-5' %>
  </div>

  <div class="form-group">
    <%= f.label :subject, class:'ml-5 font-weight-bold' %>
    <%= f.text_field :subject, class: 'col-md-8 form-control ml-5' %>
  </div>

  <div class="form-group">
    <%= f.label :recipient_ids, class:'ml-5 font-weight-bold' %>
    <%= f.text_field :recipient_ids, placeholder: "Comma seperated id's", class: 'col-md-8 form-control ml-5' %>
  </div>

  <div id="preferences">
    <%= render partial: 'preferences' %>
  </div>

  <div class="form-group">
    <%= f.label :content, class:'ml-5 font-weight-bold' %>
    <div class="col-sm-10 ml-4 bg-white">
      <%= f.trix_editor :content, required: true, autofocus: true, id:'trix_editor_content' %>
    </div>
  </div>

  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'Back', :back, class: 'btn btn-outline-primary rounded mx-3' %>
    <%= f.submit t('content.main.buttons.save'), data: { disable_with: t('content.main.buttons.saving') },
                                                 class: 'btn btn-primary rounded pull-right mr-3 font-weight-bold', id:'newsletter_save' %>
  </div>
<% end %>
