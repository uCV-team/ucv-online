<div class="middle-container-1">
  <div class="row py-40 py-md-80 mx-0">
    <div class="col-12 col-md-8 col-xl-4 mx-auto">
      <div class="card border-0 rounded">
        <div class="card-header text-center border-0 py-5">
          <h4><%= t('devise.registrations.edit.title')%></h4>
        </div>
        <div class="card-body p-5 border-left border-bottom border-right">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <% if resource.errors.any? %>
              <div class="alert alert-danger">
                <%= render "devise/shared/error_messages", resource: resource %>
              </div>
            <% end %>
            <div class="row">
              <div class="col-12">
                <div class="form-group mb-5">
                  <%= f.label :email, class:'text-muted d-block' do %>
                    <%= t('devise.registrations.edit.email')%>
                  <% end %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control form-control-lg' %>
                </div>
              </div>
              <div class="col-12">
                <div class="form-group mb-5">
                  <%= f.label :password, class:'text-muted d-block' do %>
                    <%= t('devise.registrations.edit.password.new') %>
                  <%end%>
                  <%= f.password_field :password, autocomplete: "new-password", class:'form-control form-control-lg' %>
                  <em class="text-muted d-block"><%= t('devise.registrations.password_min_length', count: @minimum_password_length) %></em>
                </div>
              </div>
              <div class="col-12">
                <div class="form-group mb-5">
                  <%= f.label :password_confirmation, class:'text-muted d-block' do %>
                    <%= t('devise.registrations.edit.password.re_enter') %>
                  <% end %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control form-control-lg' %>
                </div>
              </div>
              <div class="col-12">
                <div class="form-group mb-5">
                  <%= f.label :subdomain, class:'text-muted d-block' do %>
                    <%= t('devise.registrations.edit.subdomain') %>
                  <% end %>
                  <%= f.text_field :subdomain, autocomplete: "#{resource.subdomain}", class: 'form-control form-control-lg' %>
                  <label class="text-muted d-block mt-2"><%= t('devise.registrations.placeholder.subdomain_example') %></label>
                </div>
              </div>
              <div class="col-12">
                <div class="form-group mb-5">
                  <%= f.label :current_password, class:'text-muted d-block' do %>
                    <%= t('devise.registrations.edit.password.current') %>
                  <% end %>
                  <%= f.password_field :current_password, autocomplete: "current-password", class:'form-control form-control-lg' %>
                </div>
              </div>
            </div>
            <div class="my-5 w-100">
              <%= f.submit t('devise.registrations.edit.update'), data: { disable_with: t('devise.registrations.edit.updating_details') }, class: 'btn btn-primary w-100 rounded p-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
