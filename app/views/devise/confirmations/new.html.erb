<div class="middle-container-1">
  <div class="row py-40 py-md-80 mx-0">
    <div class="col-12 col-md-8 col-xl-4 mx-auto">
      <div class="card border-0 rounded">
        <div class="card-header text-center border-0 py-5">
          <h5><%= t('devise.confirmations.form_label') %></h5>
        </div>
        <div class="card-body p-5 border-left border-bottom border-right">
          <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
            <% if resource.errors.any? %>
              <div class="alert alert-danger">
                <%= devise_error_messages! %>
              </div>
            <% end %>
            <div class="col-12">
              <div class="form-group mb-5 input-with-icon">
                <label class="text-muted d-block"><%= t('devise.sessions.email') %></label>
                <i class="icon-envelope text-muted"></i>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('devise.sessions.email'), value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control form-control-lg pl-40' %>
              </div>
            </div>
            <div class="py-5 w-100">
              <%= f.submit t('devise.confirmations.button'), data: { disable_with: t('devise.passwords.sending_button') },
              class: 'btn btn-primary w-100 rounded' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
