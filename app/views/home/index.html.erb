<div id="popular-searches" class="bg-light py-40 my-40">
  <div class="container">
    <div class="text-center">
      <h3 class="text-primary">Popular Searches</h3>
    </div>
    <div class="row">
      <% @featured_searches.in_groups_of(5) do |featured_searches_group| %>
        <div class="col-md-4">
          <ul>
            <% featured_searches_group.each do |search| %>
              <% next unless search %>
              <li><%= link_to(search.seo_title, search) %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>

