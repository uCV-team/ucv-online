<!-- Content Container
================================================== -->
<div class="middle-container-1">
  <!-- Map
  ================================================== -->
  <div class="map-container position-relative" id="search">
    <div class="row mx-0">
      <div class="col-12 px-0 map-image-container">
        <div class="google-map" id="map"></div>
        <%= render partial: 'shared/map' %>
      </div>
    </div>
    <div class="w-100 position-absolute map-search">
      <div class="row mx-0">
        <div class="col-11 col-lg-6 mx-auto py-2 map-search-container">
          <%= form_tag searches_path do %>
          <div class="d-flex justify-content-between">
            <div class="w-100">
              <%= text_field_tag :search_query, params[:search_query], placeholder: t('search.placeholder'), class: 'form-control form-control-lg border-0' %>
            </div>
            <div>
              <%= submit_tag t('content.main.search.home'), data: { disable_with: t('content.main.buttons.searching') }, class: 'btn btn-primary' %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="bg-light pt-40">
    <div class="text-center pb-40">
      <h5 class="text-primary"><%= t('.last_cvs') -%></h5>
    </div>

    <div class="container scroller">
      <div class="d-flex align-items-center">
        <% @featured_cvs.each do |cv| %>
          <div class="mb-5">
            <div class="card card-width shadow-sm border-0 rounded mr-4 card-feature">
              <%= link_to cv_section_path(cv.user.subdomain) do %>
                <div class="card-body p-4">
                  <div class="pb-3 d-flex align-items-center justify-content-between border-bottom">
                    <%= image_tag(cv.headshot.url(:default), alt: "#{cv.abbr_name} headshot", class: 'img-fluid rounded-circle default-img-size') %>
                    <div class="pl-3">
                      <h6 class="text-dark"><%= cv.abbr_name %></h6>
                        <% if cv.user.current_location.present? && cv.user.current_location.city.present? %>
                          <small class="text-dark">
                            <i class="fas fa-map-marker"></i>
                            <%= cv.user&.current_location&.city %>
                          </small>
                        <% end %>
                        <span class="badge badge-pill badge-primary badge-primary-light text-primary font-weight-normal font-size-9 text-wrap text-left mt-2">
                          <%= short_desc(cv.about, 40) %>
                        </span>
                    </div>
                  </div>
                  <div class="pt-3 d-flex align-items-center justify-content-between">
                    <small class="text-dark">
                      <%= cv.updated_at&.strftime("%B %d, %Y") %>
                    </small>
                    <small>
                        <i class="ml-2 fas fa-angle-right"></i> publi<b>CV</b>
                    </small>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
       </div>
    </div>
       <div class="text-center pb-40"><%== t('.created_last_30_days', count: @cvs_last_created_count) -%> <%== t('.updated_last_30_days', count: @cvs_last_updated_count) -%></div>
  </div>
  <div class="container pt-40 pt-md-80">
    <div class="text-center" id="why">
      <h3 class="text-primary"><%= t('.why') -%> <%= image_pack_tag 'images/logo.svg', class: 'img-fluid', alt: 'logo' %> ?</h3>
      <p class="text-center"><%== t('.because') -%></p>
    </div>
  </div>
