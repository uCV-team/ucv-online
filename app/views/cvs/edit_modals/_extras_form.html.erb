<%= render 'shared/modal_header', id: 'edit_cv_extras', title: t('content.main.cv.edit.extras.title') do %>
  <%= form_with model: @cv do |f| %>
    <div class="modal-body p-5">
      <div class="alert alert-danger d-none"></div>
      <div class="needs-validation" novalidate="">
        <div class="row">
          <div class="col-12">
            <div class="form-group mb-5">
              <div class="d-flex justify-content-between">
                <%= f.label :interests, t('content.main.cv.show.interests'), class: 'text-muted d-block' %>
                <%= tooltip_icon('extras.interests') %>
              </div>
              <%= f.text_area :interests, class: 'form-control form-control-lg limit-desc-extras', rows: 8, "aria-label" => "interests" %>
                <span class="text-muted">0/255</span>
            </div>
          </div>
          <div class="col-12">
            <div class="form-group mb-5">
              <div class="d-flex justify-content-between">
                <%= f.label :future_plans, t('content.main.cv.show.future_plans'), class: 'text-muted d-block' %>
                <%= tooltip_icon('extras.future_plans') %>
              </div>
              <%= f.text_area :future_plans, class: 'form-control limit-desc-extras', rows: 8, "aria-label" => "future_plans" %>
                <span class="text-muted">0/255</span>
            </div>
          </div>
        </div>

      <hr class='pb-2'>
        <div class="row">
          <div class="col-12 text-center">
            <%= f.button class: 'btn btn-outline-primary rounded mx-3', "data-dismiss": "modal" do %>
              <i class="fas fa-angle-left"></i> <%= t('content.main.buttons.back') %>
            <% end %>
            <%= f.submit t('content.main.buttons.save'), class: 'btn btn-primary rounded submit-extras' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
