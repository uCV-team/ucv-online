<% if can? :update, @cv %>
  <div class="border-top py-5 pl-3 pl-md-6 pr-2">
    <div class="d-flex align-items-center justify-content-between">
      <h6><%= t('content.main.cv.show.authorization.title') %></h6>
      <% if edit_mode? %>
        <%= link_to edit_cv_section_path(section: :authorization), remote: true do %>
          <span class="badge rounded-circle badge-primary-light text-primary p-2 ml-2"><i class="icon-pencil"></i></span>
        <% end %>
      <% end %>
    </div>
    <div class="font-size-14">
      <% if @cv.authorization_statement.present? %>
        <p class="mb-0 pt-5"><%= @cv.authorization_statement.presence %></p>
      <% end %>
    </div>
  </div>
<% end %>
