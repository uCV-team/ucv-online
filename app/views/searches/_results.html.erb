<p class="mb-0 pt-5 font-size-14"><%= @total_results %> Results Found</p>
<div class="row">
  <% @results.each do |result| %>
    <% cv = result.cv %>
    <div class="col-12 pt-5">
      <div class="card shadow-sm border-0 rounded card-feature">
        <%= link_to cv_section_path(result.subdomain) do %>
          <div class="card-body p-3">
            <div class="d-flex align-items-center justify-content-between">
              <%= image_tag(cv.headshot.url(:default), alt: "#{result.abbr_name} headshot", class: 'img-fluid rounded-circle default-img-size') %>
              <div class="w-100 pl-3">
                <p class="text-dark mb-0 font-size-14 text-right"><%= cv.updated_at&.strftime("%B %d, %Y") %></p>
                <div class="d-flex">
                  <h6 class="text-dark pr-1"><%= result.abbr_name %></h6>
                  <span class="text-muted font-size-14 pl-1"><%= location_display(result) %></span>
                </div>
                <div>
                  <span class="badge badge-pill-cv badge-primary badge-primary-light text-primary font-weight-normal font-size-9 p-1 text-wrap text-left mt-2">
                    <%= short_desc(cv.about, 255) %>
                  </span>
                </div>
                <p class="mb-0 pt-2 font-size-14 text-right">
                  <i class="ml-2 fas fa-angle-right"></i> publi<b>CV</b>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class="text-center pt-5">
  <%= paginate @results, remote: true %>
</div>
