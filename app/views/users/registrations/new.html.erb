<div class="middle-container-1">
  <div class="row py-40 py-md-80 mx-0">
    <div class="col-12 col-md-8 col-xl-4 mx-auto">
      <div class="card border-0 rounded">
        <div class="card-header text-center border-0 py-5">
          <h5><%= t('devise.registrations.signup_label') %></h5>
        </div>
        <div class="card-body p-5 border-left border-bottom border-right">
          <%= form_for(@user, as: :user, url: users_registrations_path(@user)) do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <%= render "users/shared/error_messages", resource: @user %>
              </div>
            <% end %>
            <div class="row">
              <div class="col-12 col-md-6">
                <div class="form-group mb-5">
                  <label class="text-muted d-block"><%= t('devise.registrations.first_name') %>*</label>
                  <%= f.text_field :first_name, autofocus: true, placeholder: t('devise.registrations.placeholder.first_name'), class: 'form-control form-control-lg' %>
                </div>
              </div>
              <div class="col-12 col-md-6">
                <div class="form-group mb-5">
                  <label class="text-muted d-block"><%= t('devise.registrations.last_name') %>*</label>
                  <%= f.text_field :last_name, placeholder: t('devise.registrations.placeholder.last_name'), class: 'form-control form-control-lg' %>
                </div>
              </div>
              <div class="col-12">
                <div class="form-group mb-5 input-with-icon">
                  <label class="text-muted d-block"><%= t('devise.registrations.email') %>*</label>
                  <i class="icon-envelope text-muted"></i>
                  <%= f.text_field :email, placeholder: t('devise.registrations.placeholder.email'), class: 'form-control form-control-lg pl-40' %>
                </div>
              </div>
              <div class="col-12">
                <div class="form-group mb-5 input-with-icon">
                  <label class="text-muted d-block"><%= t('devise.registrations.tel') %></label>
                  <i class="icon-phone text-muted"></i>
                  <%= f.text_field :tel, placeholder: t('devise.registrations.placeholder.tel'), class: 'form-control form-control-lg pl-40' %>
                </div>
              </div>
            </div>
            <div class="py-5 w-100">
              <%= f.submit t('devise.registrations.sign_up'), data: { disable_with: t('devise.registrations.signing_up') }, class: 'btn btn-primary w-100 rounded', id: 'register_user' %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
