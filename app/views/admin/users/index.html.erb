<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="bgc-white bd bdrs-3 p-20 mB-20">
        <h4 class="c-grey-900 mB-20"><%= t('user_page.header') %></h4>
        <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
            <tr>
              <% t('user_page.datatable_columns').each do |key, value| %>
                <th><%= value %></th>
              <% end %>
            </tr>
          </thead>
        </table>
      </div>
    </div>

  </div>
</div>
<script type="text/javascript">
  document.addEventListener("turbolinks:load", function(event) {
    $('#dataTable').dataTable({
      "scrollX": true,
      "retrieve": true,
      serverSide: true,
      processing: true,
      "columns": [
          { "searchable": true },
          { "searchable": true },
          { "searchable": true },
          { "searchable": true },
          { "searchable": false }
        ],
      ajax: "<%= admin_users_path(format: :json) %>",
      "order": [[ 4, "desc" ]]
    });
  });
</script>
