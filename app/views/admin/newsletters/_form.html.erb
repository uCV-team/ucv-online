<%= render 'shared/error_messages', obj: @newsletter if @newsletter.errors.any? %>

<%= form_with model: [:admin, @newsletter], local: true, id:'newsletter_form'  do |f| %>

  <div id="new-attachment"></div>

  <div class="form-group mt-4 ml-3">
    <%= f.label :name, class:'font-weight-bold h5' %>
    <%= f.text_field :name, class: 'col-md-8 form-control form-control-lg' %>
  </div>

  <div class="form-group ml-3 mt-4">
    <%= f.label :subject, class:'font-weight-bold h5' %>
    <%= f.text_field :subject, class: 'col-md-8 form-control form-control-lg' %>
  </div>

  <div class="form-group ml-3 mt-4">
    <%= f.label :recipient_ids, class:'font-weight-bold h5' %>
    <%= f.text_field :recipient_ids, placeholder: "Comma seperated id's", class: 'col-md-8 form-control form-control-lg' %>
  </div>

  <div id="preferences">
    <%= render partial: 'preferences' %>
  </div>

  <div class="form-group ml-3">
    <%= f.label :content, class:'font-weight-bold h5' %>
    <div class="col-sm-10 bg-white mt-3">
      <%= f.trix_editor :content, required: true, autofocus: true, id:'trix_editor_content' %>
    </div>
  </div>

  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'Back', :back, class: 'btn btn-primary rounded mx-3' %>
    <%= f.submit t('content.main.buttons.save'), data: { disable_with: t('content.main.buttons.saving') },
                                                 class: 'btn btn-success rounded pull-right mr-3 font-weight-bold', id:'newsletter_save' %>
  </div>
<% end %>
