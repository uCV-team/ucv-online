<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="bgc-white bd bdrs-3 p-20 mB-20">
        <h4 class="c-grey-900 mB-20">All Flags</h4>
        <table id="dataTable_flags" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Flagged CV</th>
              <th>Flagged By User</th>
              <th>Reason</th>
              <th>Created at</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>
<script type="text/javascript">
  document.addEventListener("turbolinks:load", function(event) {
    $('#dataTable_flags').dataTable({
      "scrollX": true,
      processing: true,
      serverSide: true,
      "retrieve": true,
      "columns": [
          { "searchable": true },
          { "searchable": true },
          { "searchable": true },
          { "searchable": false }
        ],
      ajax: "<%= admin_flags_path(format: :json) %>"
    });
  });
</script>
